#include <stdio.h>
#include <string.h>
#include <stdbool.h>

/*
******** COMPARISON OPERATORS ********

==  Equal to
<   Less than
<=  Less than or equal to
>   Greater than
>=  Greater than or equal to
*/

/*
******** LOGICAL OPERATORS ********
&&  AND
||  OR
!   NOT
*/

int main() {

    // ******* BOOLEAN IF STATEMENT EXAMPLE *******
    bool isOnline = true;

    if (isOnline) {
        printf("You are online\n");
    } else {
        printf("You are not online\n");
    }


    //******** STRING INPUT EXAMPLE ********
    char name[50] = ""; // Initialize name with an empty string

    printf("Enter your name: "); 
    fgets(name, sizeof(name), stdin); // Read a line of input from the user

    // Remove newline character added by fgets
    name[strcspn(name, "\n")] = '\0';

    if (strlen(name) == 0) { // Check if the user entered an empty string
        printf("You did not enter a name\n");
    } else {
        printf("Hello %s\n", name);
    }


    //******** SWITCH STATEMENT EXAMPLE ********
    int mark = 65;
    int gradeCategory;

    /*
    Since C switch statements cannot use conditions like:
    case mark > 90:

    We categorize first, then switch on the category.
    */

    if (mark > 90) {
        gradeCategory = 1;
    } else if (mark > 70) {
        gradeCategory = 2;
    } else if (mark > 50) {
        gradeCategory = 3;
    } else {
        gradeCategory = 4;
    }

    switch (gradeCategory) {
        case 1:
            printf("Distinction\n");
            break;
        case 2:
            printf("Merit\n");
            break;
        case 3:
            printf("Pass\n");
            break;
        default:
            printf("Fail\n");
    }


    //******** TERNARY OPERATOR EXAMPLES ********

    // Example 1
    int x = 7;
    int y = 6;
    int max = (x > y) ? x : y; // If x is greater than y, max is x; otherwise, max is y
    printf("Max value: %d\n", max);

    // Example 2
    printf("Status: %s\n", (isOnline) ? "online" : "offline");
    // If isOnline is true, it prints "Status: online"; otherwise, it prints "Status: offline"

    // Example 3
    int number = 8;
    printf("%d is %s\n", number, (number % 2 == 0) ? "even" : "odd");
    // If number is even (i.e., number % 2 == 0), it prints "8 is even"; otherwise, it would print "8 is odd"


    // Example 4
    int hours = 12;
    int minutes = 30;
    printf("%02d:%02d %s\n",
           hours,
           minutes,
           (hours < 12) ? "AM" : "PM");
    // If hours is less than 12, it prints "12:30 AM"; otherwise, it would print "12:30 PM"

    
    //******** COMPARISON + LOGICAL OPERATOR EXAMPLE ********

    int age = 20;

    if (age >= 18 && age <= 65) {
        printf("Working age\n");
    } else {
        printf("Not working age\n");
    }

}